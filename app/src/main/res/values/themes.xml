<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Theme -->
    <style name="Base.Theme.QuantumEngine" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/quantum_blue</item>
        <item name="colorPrimaryDark">@color/quantum_blue_dark</item>
        <item name="colorPrimaryContainer">@color/quantum_blue_light</item>
        
        <!-- Accent Colors -->
        <item name="colorAccent">@color/accent_orange</item>
        <item name="colorSecondary">@color/accent_green</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/surface_elevated</item>
        
        <!-- Text Colors -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background_darker</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.QuantumEngine.Headline1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.QuantumEngine.Body1</item>
    </style>
    
    <style name="Theme.QuantumEngine" parent="Base.Theme.QuantumEngine" />
    
    <!-- Launcher Theme -->
    <style name="Theme.QuantumEngine.Launcher" parent="Theme.QuantumEngine">
        <item name="android:windowBackground">@color/background_darker</item>
    </style>
    
    <!-- Editor Theme -->
    <style name="Theme.QuantumEngine.Editor" parent="Theme.QuantumEngine">
        <item name="android:windowFullscreen">false</item>
    </style>
    
    <!-- Splash Theme -->
    <style name="Theme.QuantumEngine.Splash" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/quantum_blue_dark</item>
    </style>
    
    <!-- Typography Styles -->
    <style name="TextAppearance.QuantumEngine.Headline1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.QuantumEngine.Body1" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <!-- Button Styles -->
    <style name="Widget.QuantumEngine.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="backgroundTint">@color/quantum_blue</item>
    </style>
    
    <style name="Widget.QuantumEngine.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/quantum_blue</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.QuantumEngine.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/surface_dark</item>
    </style>
    
    <!-- FAB Styles -->
    <style name="Widget.QuantumEngine.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/white</item>
        <item name="backgroundTint">@color/quantum_blue</item>
    </style>
</resources>
