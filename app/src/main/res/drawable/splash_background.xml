<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/quantum_blue"
                android:endColor="@color/quantum_blue_dark"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Logo (temporal con texto, reemplazar con imagen) -->
    <item>
        <bitmap
            android:gravity="center"
            android:src="@mipmap/ic_launcher" />
    </item>
</layer-list>
