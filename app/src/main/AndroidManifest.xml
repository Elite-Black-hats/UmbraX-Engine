<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- OpenGL ES 3.0 -->
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />
    
    <!-- Vulkan 1.1 (optional) -->
    <uses-feature
        android:name="android.hardware.vulkan.version"
        android:version="0x00401000"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuantumEngine"
        android:hardwareAccelerated="true"
        android:largeHeap="true">
        
        <!-- Splash Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.QuantumEngine.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Launcher Activity (Project Manager) -->
        <activity
            android:name=".launcher.LauncherActivity"
            android:exported="false"
            android:theme="@style/Theme.QuantumEngine.Launcher"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        
        <!-- Mobile Editor Activity -->
        <activity
            android:name=".editor.MobileEditorActivity"
            android:exported="false"
            android:theme="@style/Theme.QuantumEngine.Editor"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustResize" />
        
        <!-- Demo Activity (for testing) -->
        <activity
            android:name=".demo.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.QuantumEngine"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape" />
        
    </application>

</manifest>
